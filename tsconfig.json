{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node12",

    "rootDir": "src",
    "outDir": "dist",

    "jsx": "react",
    "jsxFactory": "h",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/server/*", "src/components/*"]
}
